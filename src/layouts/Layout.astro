---

interface Props {
	title: string;
	children: any;
}

const { title, children } = Astro.props;
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	{children}
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		--background-blue-gradient: linear-gradient(90deg, rgba(36, 90, 135, 1) 0%, rgba(47, 123, 179, 1) 100%);
		--blue100: #3385C6;
		--blue200: #153C5D;
		--black: #000;
		--black200: #1B1B1B;
		--white: #FFF;
		--grey100: #E8E8E8;
	}

	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
	}

	html {
		box-sizing: border-box;
	}
	*, *:before, *:after {
		box-sizing: inherit;
	}

	body {
		margin: 0;
		font-family: "proxima-nova", sans-serif;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		overflow-x: hidden;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	img {
		display: block;
		height: auto;
		width: 100%;
	}

	a {
		text-decoration: none;
	}

	ul {
		list-style: none;
	}

	.container {
		margin: 0 auto;
		max-width: 1600px;
		width: calc(98vw - 20px);

		@media (min-width: 750px) {

		}
	}

	.button {
		display: inline-block;
		padding: 10px 16px;
		border-radius: 2px;
		font-family: "proxima-nova-extra-condensed", georgia;
		font-size: 15px;
		font-weight: 700;
		text-transform: uppercase;
		transition: linear 0.25s;

		@media (min-width: 400px) {
			font-size: 17px;
		}

		@media (min-width: 500px) {
			padding: 10px 20px;
			font-size: 20px;
		}

		@media (min-width: 750px) {
			padding: 12px 24px;
			font-size: 18px;
		}

		@media (min-width: 850px) {
			font-size: 21px;
		}

		&.button--blue {
			background: var(--blue100);
			border: 1px solid var(--blue100);
			color: var(--white);
		}

		&.button--white {
			background: var(--white);
			color: var(--blue100);
		}

		&.button-white-ghost {
			background: none;
			border: 1px solid var(--white);
			color: var(--white);

			@media(hover: hover) and (pointer: fine) {
				&:hover {
					background: var(--white);
					color: var(--black);
				}
			}
		}
	}

	.text-arrow-cta {
		position: relative;
		color: var(--blue100);
		font-size: 20px;;
		font-weight: bold;

		&:after {
			position: absolute;
			bottom: 0;
			left: 0;
			height: 1px;
			width: 100%;
			background: transparent);
			content: "";
			transition: ease 0.25s;
		}

		@media(hover: hover) and (pointer: fine) {
			&:hover {
				&::after {
					background: var(--blue100);
				}
			}
		}

		svg {
			position: absolute;
			top: 50%;
			height: 17px;
			margin-top: 1px;;
			margin-left: 6px;
			width: 20px;
			fill: var(--blue100);
			transform: translateY(-50%);
		}
	}

	.bg-gradient-blue {
		background-image: var(--background-blue-gradient);
	}

	.section-heading {
		margin: 0 0 12px;
		font-family: "proxima-nova-extra-condensed", sans-serif;
		font-size: 40px;
		font-weight: 600;
		letter-spacing: -1px;
		line-height: 1.15;
		text-wrap: balance;
		text-transform: uppercase;
		@media (min-width: 750px) {
			font-size: 48px;
		}
		&.section-heading-white {
			color: var(--white);
		}
	}
</style>
