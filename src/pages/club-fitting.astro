---

<Layout title="BCG">
	<main>
		<Hero {...heroProps} />
        <Cards {...cardsDataUpper} />
        <Cards {...cardsDataMiddle} />
        <Cards {...cardsDataLower} />
        <Cards {...cardsDataLast} />
		<Callout
			theme="blue"
			heading="Get Custom Fitted Today!"
			description="Book an appointment with our expert fitters and elevate your game with a perfect fit."
			buttonText="Book Your Fitting"
			buttonLink="https://generalstudentbooking.as.me/schedule.php?appointmentType=54195413"
		/>
	</main>
</Layout>

<style>
	h1 {
		font-size: 4rem;
