---
import { Image } from 'astro:assets';

export interface Slide {
    heading?: string;
    body?: string;
    imageSrc: string;
}

export interface CarouselProps {
    slides: Slide[];
    backgroundColor?: string;
    reverseRow?: boolean;
}

const { slides = [], backgroundColor = "white", reverseRow = false } = Astro.props;

function generateUniqueId() {
    return 'carousel-' + Math.random().toString(36).substr(2, 9);
}

const uniqueId = generateUniqueId();
---

<section class={`carousel ${backgroundColor === "black" ? "carousel-dark" : "carousel-light"}`}>
    <div class="container">
        <div id={uniqueId} class="splide">
            <div class="splide__track">
                <ul class="splide__list">
                    {slides.map((slide, index) => (
                        <li
                            key={index}
                            class={`splide__slide carousel-slide ${reverseRow ? "carousel-slide-reversed" : ""}`}
                        >
                            <div class="carousel-slide-context">
                                {slide.heading && (
                                    <h2>{slide.heading}</h2>
                                )}
                                {slide.body && (
                                    <div>
                                        <p>{slide.body}</p>
                                    </div>
                                )}
                            </div>
                            <div class="carousel-slide-image">
                                <Image src={slide.imageSrc} alt={`Slide ${index + 1}`} />
                            </div>
                        </li>
                    ))}
                </ul>
            </div>
        </div>
    </div>
</section>

<style>
    @import '@splidejs/splide/css';
    .carousel {
        padding: 140px 0;
        background: var(--white);

        @media (min-width: 750px) {
            padding: 112px 0;
        }

        &.carousel-dark {
            background: var(--black);
            color: var(--white);

            .splide__pagination {
                .splide__pagination__page {
                    background: var(--white);
                }
            }
        }

        .splide__pagination {
            position: absolute;
            top: 100%;
            display: flex;
            gap: 12px;
            left: 50%;
            height: 4px;
            margin: 0;
            padding: 0;
            transform: translateX(-50%);

            @media (min-width: 750px) {
                top: calc(100% + 30px);
            }

            li {
                position: relative;
                height: 4px;
                margin: 0;
                padding: 0;
            }

            .splide__pagination__page {
                background: var(--black);
                border: none;
                border-radius: 4px;
                cursor: pointer;
                height: 4px;
                width: 48px;

                &.is-active {
                    background: var(--blue100);
                }
            }
        }

        .carousel-slide {
            display: flex;
            flex-direction: column-reverse;
            justify-content: flex-end;
            gap: 24px;

            @media (min-width: 750px) {
                flex-direction: row;
                gap: 40px;
                justify-content: flex-start;
            }

            &.carousel-slide-reversed {
                @media (min-width: 750px) {
                    flex-direction: row-reverse;
                }
            }

            .carousel-slide-context {
                display: flex;
                flex-direction: column;

                @media (min-width: 750px) {
                    justify-content: center;
                    width: 50%;
                }
            }

            .carousel-slide-image {
                @media (min-width: 750px) {
                    width: 50%;
                }

                img {
                    height: 100%;
                    object-fit: cover;
                    object-position: center;
                }
            }

            h2 {
                color: inherit;
                margin: 0 0 12px;
                font-family: "proxima-nova-extra-condensed", sans-serif;
                font-size: 40px;
                font-weight: 600;
                letter-spacing: -1px;
                line-height: 1.15;
                text-transform: uppercase;

                @media (min-width: 750px) {
                    margin: 0 0 16px;
                    max-width: 500px;
                    font-size: 48px;
                }
            }

            p {
                margin-top: 0;
                font-size: 20px;
                line-height: 1.35;

                @media (min-width: 750px) {
                    max-width: 90%;
                    font-size: 24px;
                }
            }
        }

        /* Ensure splide__sr doesn't affect layout */
        .splide__sr {
            position: absolute;
            width: 1px;
            height: 1px;
            margin: -1px;
            border: 0;
            padding: 0;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
        }
    }
</style>

<script>
    import Splide from "@splidejs/splide";

    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.splide').forEach((splideElement) => {
            new Splide(splideElement, {
                type: 'loop',
                perPage: 1,
                pagination: true,
                arrows: false,
                autoplay: true,
                autoHeight: true,
                interval: 3000,
                drag: true,
            }).mount();
        });
    });
</script>
