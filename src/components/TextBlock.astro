---
export interface Props {
    heading?: string;
    body?: string;
    background?: string;
    extraPadding?: boolean;
}

const { heading, body, background, extraPadding } = Astro.props;
---

<section class=`text ${background === "black" ? "text--black" : "text--white"} ${extraPadding ? "padding-y" : ""}`>
    <div class="container">
        {heading && (
            <h2>{heading}</h2>
        )}
        {body && (
            <div class="text-wysiwyg">
                <p>{body}</p>
            </div>
        )}
    </div>
</section>

<style>
    .text {
        padding: 48px 0;

        @media (min-width: 750px) {
            padding: 96px 0;
        }

        &.padding-y {
            padding: 64px 0;
            @media (min-width: 750px) {
                padding: 132px 0;
            }
        }

        &.text--white {
            background: var(--white);
            color: var(--black);
        }

        &.text--black {
            background: var(--black);
            color: var(--white);
        }

        h2 {
            margin: 0 0 32px;
            font-family: "proxima-nova-extra-condensed", sans-serif;
            font-size: 40px;
            font-weight: 600;
            letter-spacing: -1px;
            line-height: 1.15;
            text-transform: uppercase;
            @media (min-width: 750px) {
                max-width: 500px;
                font-size: 48px;
            }
        }

        p {
            margin-top: 0;
            max-width: 90%;
            font-size: 20px;
            line-height: 1.35;

            @media (min-width: 750px) {
                font-size: 24px;
                max-width: 960px;
            }
        }
    }
</style>